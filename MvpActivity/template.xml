<?xml version="1.0"?>
<template
        format="5"
        revision="6"
        name="MVP Application"
        description="Create a new MVP activity with clean architecture"
        requireAppTheme="true"
        minApi="8"
        minBuildApi="14">

    <dependency name="android-support-v4" revision="8"/>

    <category value="Activity"/>
    <formfactor value="Mobile"/>

    <parameter
            id="activityClass"
            name="Activity Name"
            type="string"
            constraints="class|unique|nonempty"
            default="MvpActivity"
            help="The name of the activity class to create"/>

    <parameter
            id="fragmentClass"
            name="Fragment Name"
            type="string"
            constraints="class|unique|nonempty"
            default="MvpFragment"
            help="The name of the fragment class to create for the activity"/>

    <parameter
            id="layoutName"
            name="Layout Name"
            type="string"
            constraints="layout|unique|nonempty"
            suggest="${activityToLayout(activityClass)}"
            default="activity_mvp"
            help="The name of the layout to create for the activity"/>

    <parameter
            id="daggerComponentName"
            name="Dagger Component Name"
            type="string"
            constraints="class|unique|nonempty"
            suggest="MainComponent"
            default="MainComponent"
            help="The name of the dagger component to create for the activity"/>

    <parameter
            id="activityTitle"
            name="Title"
            type="string"
            constraints="nonempty"
            default="Mvp Activity"
            help="The name of the activity."/>

    <parameter
            id="parentActivityClass"
            name="Hierarchical Parent"
            type="string"
            constraints="activity|exists|empty"
            default=""
            help="The hierarchical parent activity, used to provide a default implementation for the 'Up' button"/>

    <parameter
            id="packageName"
            name="Package name"
            type="string"
            constraints="package"
            default="com.mycompany.myapp"/>

    <thumbs>
        <thumb>template_login_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl"/>
    <execute file="recipe.xml.ftl"/>

</template>
